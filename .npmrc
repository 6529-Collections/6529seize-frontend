# Always save exact versions (no ^ or ~)
save-exact=true

# Ensure package-lock.json is created and used
package-lock=true

# Audit packages during install (security check)
audit-level=high

# Use official npm registry (security)
registry=https://registry.npmjs.org/

# Prevent automatic package updates during install
save=true

# Show more details during install
loglevel=warn